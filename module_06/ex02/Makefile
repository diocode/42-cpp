CXX = c++
CXXFLAGS = -Wall -Werror -Wextra -std=c++98 -pedantic
DEPS =

SRC = main.cpp
OBJ = $(SRC:.cpp=.o)
NAME = base

all: $(NAME)
$(NAME): $(OBJ) $(DEPS)
	@$(CXX) $(CXXFLAGS) $(OBJ) -o $(NAME)
clean:
	@rm $(OBJ)
fclean: clean
	@rm $(NAME)
re: fclean all